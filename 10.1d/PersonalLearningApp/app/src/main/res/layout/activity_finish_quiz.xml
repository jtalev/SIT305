<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Quiz.FinishQuizActivity"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="20sp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_results"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_marginBottom="80sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:id="@+id/q1_layout"
            android:orientation="vertical"
            android:background="@drawable/user_input_background"
            android:layout_marginTop="10sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/q1_text"
                android:text="1. question"
                android:textColor="@color/white"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:id="@+id/q1_answer"
                android:text="@string/description"
                android:textColor="@color/white"
                android:paddingHorizontal="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:id="@+id/q2_layout"
            android:orientation="vertical"
            android:background="@drawable/user_input_background"
            android:layout_marginTop="10sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/q2_text"
                android:text="2. question"
                android:textColor="@color/white"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:id="@+id/q2_answer"
                android:text="@string/description"
                android:textColor="@color/white"
                android:paddingHorizontal="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:id="@+id/q3_layout"
            android:orientation="vertical"
            android:background="@drawable/user_input_background"
            android:layout_marginTop="10sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/q3_text"
                android:text="3. question"
                android:textColor="@color/white"
                android:paddingHorizontal="10sp"
                android:paddingVertical="10sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:id="@+id/q3_answer"
                android:text="@string/description"
                android:textColor="@color/white"
                android:paddingHorizontal="10sp" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:id="@+id/finish_quiz_button"
            android:background="@drawable/submit_button_background"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="100sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>